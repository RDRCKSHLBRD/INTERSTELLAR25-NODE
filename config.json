{
  "version": "1.0.0",
  "project": "interstellar",
  
  "_architecture": "Two-tier config: Root (global) + Modular (page-specific)",
  "_root_purpose": "Global system settings used by InterstellarSystem and all pages",
  "_modular_location": "Page-specific configs in /config/pages/[page].json",
  
  "_comment_state": "ViewportState - Pure viewport calculations (globally accessible)",
  "state": {
    "precision": 4,
    "throttle": 100,
    "golden": {
      "phi": 1.618033988749895,
      "tolerance": 0.1
    },
    "measure": {
      "min": 300,
      "max": 1200,
      "power": 0.8
    },
    "gutter": {
      "min": 8,
      "factor": 0.02
    },
    "columns": {
      "min": 1,
      "max": 4,
      "width": 300
    },
    "header": {
      "min": 48,
      "factor": 0.08
    },
    "modes": {
      "stack": { 
        "maxWidth": 720, 
        "maxAr": 1.1
      },
      "split": { 
        "minWidth": 720, 
        "minAr": 1.1
      }
    }
  },

  "_comment_position": "RatioPosition - Global positioning settings",
  "position": {
    "debug": false,
    "useCSSTransform": true,
    "roundToPixel": true
  },

  "_comment_theme": "Global theme - CSS variables applied by InterstellarSystem",
  "theme": {
    "colors": {
      "bg": {
        "primary": "#0a0a0a",
        "secondary": "#1a1a1a",
        "tertiary": "#2a2a2a"
      },
      "text": {
        "primary": "#d9e0cd",
        "secondary": "#adaaa1",
        "muted": "#8c9a9b"
      },
      "accent": {
        "primary": "#9da2a5",
        "secondary": "#8e8c86",
        "tertiary": "#959b9a"
      },
      "bars": {
        "dark": "#231f20",
        "gray": "#adaaa1",
        "charcoal": "#3d3c38",
        "mint": "#d9e0cd",
        "steel": "#8c9a9b",
        "silver": "#9da2a5"
      }
    },
    "spacing": {
      "unit": 8,
      "xs": 4,
      "sm": 8,
      "md": 16,
      "lg": 24,
      "xl": 32,
      "xxl": 48
    },
    "typography": {
      "baseFontSize": 16,
      "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "lineHeight": 1.5,
      "measure": {
        "min": 45,
        "ideal": 66,
        "max": 75
      }
    },
    "animation": {
      "duration": {
        "fast": 150,
        "normal": 300,
        "slow": 500
      },
      "easing": {
        "default": "cubic-bezier(0.34, 1.56, 0.64, 1)",
        "smooth": "cubic-bezier(0.4, 0.0, 0.2, 1)",
        "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
      },
      "useGPU": true
    }
  },

  "_comment_quadTree": "QuadTree spatial system - Global settings (camelCase!)",
  "quadTree": {
    "enabled": true,
    "maxDepth": 4,
    "minNodeSize": 64,
    "performance": {
      "debounceDelay": 50,
      "cacheSize": 50,
      "maxCalculationTime": 16
    },
    "debug": {
      "enabled": false,
      "logLevel": "info",
      "showOverlay": false
    }
  },

  "_comment_preloader": "Preloader - Global animation settings",
  "preloader": {
    "enabled": true,
    "minDisplayTime": 2000,
    "animation": {
      "duration": 1500,
      "stagger": 100,
      "easing": "cubic-bezier(0.34, 1.56, 0.64, 1)"
    },
    "bars": {
      "count": 13,
      "colors": ["#231f20", "#adaaa1", "#3d3c38", "#d9e0cd", "#8c9a9b", "#9da2a5"],
      "redshift": {
        "enabled": true,
        "intensity": 1.5,
        "blur": 8
      }
    },
    "text": {
      "content": "Interstellar",
      "delay": 1500,
      "fadeInDuration": 1000
    }
  },

  "_comment_audio": "Audio player - Global settings",
  "audio": {
    "defaultVolume": 1.0,
    "fadeEffectDuration": 1000,
    "skipInterval": 30,
    "autoPlay": false,
    "repeatMode": false
  },

  "_comment_performance": "Performance monitoring - Global settings",
  "performance": {
    "enableMemoryMonitoring": true,
    "cleanupInterval": 300000,
    "maxCacheSize": 100,
    "throttleResize": 100,
    "throttleInterval": 250,
    "monitorFPS": true,
    "adaptiveComplexity": true,
    "roundToDevice": true,
    "thresholds": {
      "lowFPS": 30
    }
  },

  "_comment_api": "API configuration - Global settings",
  "api": {
    "requestTimeout": 30000,
    "retryAttempts": 3,
    "retryDelay": 1000,
    "enableCaching": true
  },

  "_comment_features": "Feature flags - Global toggles",
  "features": {
    "enableEffects": true,
    "enableVisualization": false,
    "enableEqualizer": false,
    "enableCrossfade": false,
    "enableKeyboardShortcuts": true
  },

  "_comment_debug": "Debug and logging - Global settings",
  "debug": {
    "enableLogging": true,
    "enablePerformanceTracking": true,
    "logLevel": "info"
  }
}