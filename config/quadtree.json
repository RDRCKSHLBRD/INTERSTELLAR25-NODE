    "content": { "desktop": 100, "tablet": 90, "mobile": 80 },
    "generic": { "desktop": 100, "tablet": 90, "mobile": 80 }
  },
  
  "scaleConstraints": {
    "min": 0.5,
    "max": 3.0,
    "precision": 0.001
  },
  
  "performance": {
    "debounceDelay": 50,
    "cacheSize": 50,
    "maxCalculationTime": 16
  },
  
  "microFunctionDefaults": {
    "_comment": "Default parameters for microFunctions",
    "headerLayout": {
      "logoWidth": 200,
      "artistNameWidth": 300,
      "navWidth": 400,
      "leftMargin": 0.02,
      "rightMargin": 0.08
    },
    "goldenSplit": {
      "largeFirst": true
    },
    "columnLayout": {
      "defaultGap": 16
    }
  },
  
  "debug": {
    "enabled": false,
    "logLevel": "info",
    "showOverlays": false
  },
  
  "databaseSync": {
    "enabled": false,
    "apiEndpoint": "/api/config/quadtree",
    "autoSync": false,
    "syncIntervalMs": 30000
  }
}