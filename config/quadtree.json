    "header": { "desktop": 200, "tablet": 160, "mobile": 140 },
    "media": { "desktop": 200, "tablet": 180, "mobile": 160 },
    "navigation": { "desktop": 120, "tablet": 100, "mobile": 80 },
    "actions": { "desktop": 24, "tablet": 22, "mobile": 20 },
