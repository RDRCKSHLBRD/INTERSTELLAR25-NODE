{
  "layout": {
    "video": {
      "flexRatio": 0.8,
      "minWidth": "60vw"
    },
    "sidebar": {
      "flexRatio": 0.2,
      "minWidth": "20vw",
      "maxWidth": "400px",
      "regions": {
        "spacerTop": 0.05,
        "navigation": 0.9
      }
    }
  },
  "positions": {
    "artistNav": {
      "system": "cartesian",
      "top": 0.7,
      "left": 0,
      "anchor": "top-left",
      "clamp": true,
      "padding": 0.01,
      "styles": {
        "display": "flex",
        "flexDirection": "column",
        "justifyContent": "flex-start",
        "width": "100%",
        "height": "30%"
      }
    }
  },
  "breakpoints": {
    "desktop": {
      "video": {
        "flexRatio": 0.8
      },
      "sidebar": {
        "flexRatio": 0.2
      },
      "positions": {
        "artistNav": {
          "top": 0.7,
          "styles": {
            "height": "30%"
          }
        }
      }
    },
    "mobile": {
      "video": {
        "height": "55vh"
      },
      "sidebar": {
        "height": "45vh"
      },
      "positions": {
        "artistNav": {
          "top": 0.05,
          "styles": {
            "height": "95%"
          }
        }
      }
    }
  },
  "theme": {
    "colors": {
      "bgPrimary": "#0a0a0a",
      "bgSecondary": "#0F1D38",
      "accent": "#0e9bcc",
      "accentHover": "#48BBD8"
    },
    "typography": {
      "fontFamily": "Helvetica, sans-serif",
      "fontSize": 15,
      "fontWeight": 100,
      "letterSpacing": "0.8px",
      "letterSpacingHover": "3px"
    },
    "spacing": {
      "padding": 20,
      "gap": 10
    },
    "animation": {
      "slideDistance": 10,
      "hoverDistance": 5
    }
  }
}