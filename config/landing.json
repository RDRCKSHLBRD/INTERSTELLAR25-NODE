{
  "_comment": "Landing Page Configuration - All layout, styling, and behavior",
  "_version": "1.0.0",
  
  "layout": {
    "type": "split",
    "video": {
      "flexRatio": 0.8,
      "minWidth": "60vw",
      "objectFit": "cover"
    },
    "sidebar": {
      "flexRatio": 0.2,
      "minWidth": "20vw",
      "maxWidth": "400px",
      "regions": {
        "spacerTop": 0.08,
        "navigation": 0.87,
        "spacerBottom": 0.05
      }
    }
  },
  
  "breakpoints": {
    "mobile-sm": {
      "mode": "stack",
      "video": {
        "height": "60vh"
      },
      "sidebar": {
        "height": "40vh",
        "regions": {
          "spacerTop": 0.05,
          "navigation": 0.9
        }
      }
    },
    "mobile": {
      "mode": "stack",
      "video": {
        "height": "60vh"
      },
      "sidebar": {
        "height": "40vh",
        "regions": {
          "spacerTop": 0.05,
          "navigation": 0.9
        }
      }
    },
    "tablet": {
      "mode": "split",
      "video": {
        "flexRatio": 0.75
      },
      "sidebar": {
        "flexRatio": 0.25,
        "regions": {
          "spacerTop": 0.05,
          "navigation": 0.9
        }
      }
    },
    "desktop": {
      "mode": "split",
      "video": {
        "flexRatio": 0.8
      },
      "sidebar": {
        "flexRatio": 0.2,
        "regions": {
          "spacerTop": 0.08,
          "navigation": 0.87
        }
      }
    },
    "desktop-lg": {
      "mode": "split",
      "video": {
        "flexRatio": 0.82
      },
      "sidebar": {
        "flexRatio": 0.18,
        "regions": {
          "spacerTop": 0.08,
          "navigation": 0.87
        }
      }
    },
    "desktop-xl": {
      "mode": "split",
      "video": {
        "flexRatio": 0.85
      },
      "sidebar": {
        "flexRatio": 0.15,
        "maxWidth": "500px",
        "regions": {
          "spacerTop": 0.08,
          "navigation": 0.87
        }
      }
    }
  },
  
  "artistLinks": {
    "containerSelector": ".landing-sidebar",
    "navigationSelector": "#artistNav",
    "dataSource": "/config/artists.json",
    "linkClass": "artist-link",
    "layout": {
      "justifyContent": "center",
      "gap": "var(--qt-gap, 10px)",
      "padding": "0 var(--qt-padding, 20px)"
    },
    "quadtreeObserve": true
  },
  
  "theme": {
    "video": {
      "background": "#000000"
    },
    "sidebar": {
      "background": "#0F1D38",
      "color": "#cadbda"
    },
    "links": {
      "color": "#0e9bcc",
      "colorHover": "#48BBD8",
      "fontWeight": 100,
      "letterSpacing": "0.8px",
      "letterSpacingHover": "3px"
    }
  },
  
  "animation": {
    "enabled": true,
    "entrance": {
      "type": "slideIn",
      "duration": "0.6s",
      "easing": "ease-out",
      "stagger": 0.1
    },
    "hover": {
      "duration": "0.3s",
      "easing": "ease"
    }
  },
  
  "accessibility": {
    "respectReducedMotion": true,
    "focusOutline": true,
    "scrollBehavior": "smooth"
  }
}