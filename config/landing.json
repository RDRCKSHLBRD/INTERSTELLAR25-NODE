{
  "layout": {
    "video": {
      "flexRatio": 0.8,
      "minWidth": "60vw",
      "objectFit": "cover"
    },
    "sidebar": {
      "flexRatio": 0.2,
      "minWidth": "20vw",
      "maxWidth": "400px",
      "regions": {
        "spacerTop": 0.6,
        "navigation": 0.27,
        "spacerBottom": 0.13
      }
    },
    "breakpoints": {
      "mobile": {
        "mode": "stack",
        "video": { "height": "60vh" },
        "sidebar": { "height": "40vh" }
      },
      "tablet": {
        "mode": "split",
        "video": { "flexRatio": 0.8 },
        "sidebar": { "flexRatio": 0.2 }
      },
      "desktop": {
        "mode": "split",
        "video": { "flexRatio": 0.8 },
        "sidebar": { "flexRatio": 0.2 }
      }
    }
  },
  
  "positions": {
    "artistNav": {
      "system": "cartesian",
      "top": 0.6,
      "left": 0,
      "anchor": "top-left",
      "clamp": true,
      "padding": 0.02,
      "styles": {
        "display": "flex",
        "flexDirection": "column",
        "justifyContent": "flex-start",
        "width": "100%",
        "height": "27%"
      }
    }
  },
  
  "breakpoints": {
    "desktop": {
      "video": {
        "flexRatio": 0.8
      },
      "sidebar": {
        "flexRatio": 0.2
      },
      "positions": {
        "artistNav": {
          "top": 0.6,
          "styles": {
            "height": "27%"
          }
        }
      }
    },
    "mobile": {
      "video": {
        "height": "55vh"
      },
      "sidebar": {
        "height": "45vh"
      },
      "positions": {
        "artistNav": {
          "top": 0.05,
          "styles": {
            "height": "90%"
          }
        }
      }
    }
  },
  
  "theme": {
    "colors": {
      "bgPrimary": "#0a0a0a",
      "bgSecondary": "#0F1D38",
      "accent": "#0e9bcc",
      "accentHover": "#48BBD8"
    },
    "typography": {
      "fontFamily": "Helvetica, sans-serif",
      "fontSize": 15,
      "fontWeight": 100,
      "letterSpacing": "0.8px",
      "letterSpacingHover": "3px"
    },
    "spacing": {
      "padding": 20,
      "gap": 10
    },
    "animation": {
      "slideDistance": 10,
      "hoverDistance": 5
    }
  }
}