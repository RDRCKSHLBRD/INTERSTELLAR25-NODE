{
  "layout": {
    "video": {
      "flexRatio": 0.8,
      "minWidth": "60vw",
      "objectFit": "cover"
    },
    "sidebar": {
      "flexRatio": 0.2,
      "minWidth": "20vw",
      "maxWidth": "400px"
    }
  },
  
  "positions": {
    "artistNav": {
      "system": "cartesian",
      "top": 0.55,
      "left": 0,
      "anchor": "top-left",
      "clamp": true,
      "padding": 0.02,
      "styles": {
        "display": "flex",
        "flexDirection": "column",
        "justifyContent": "flex-start",
        "width": "100%",
        "height": "35%"
      }
    }
  },
  
  "breakpoints": {
    "desktop": {
      "video": {
        "flexRatio": 0.8
      },
      "sidebar": {
        "flexRatio": 0.2,
        "height": "100vh"
      },
      "positions": {
        "artistNav": {
          "top": 0.55,
          "styles": {
            "height": "35%"
          }
        }
      }
    },
    "tablet-landscape": {
      "video": {
        "flexRatio": 0.7
      },
      "sidebar": {
        "flexRatio": 0.3,
        "height": "100vh"
      },
      "positions": {
        "artistNav": {
          "top": 0.4,
          "styles": {
            "height": "50%"
          }
        }
      }
    },
    "tablet-portrait": {
      "video": {
        "height": "50vh"
      },
      "sidebar": {
        "height": "50vh"
      },
      "positions": {
        "artistNav": {
          "top": 0.1,
          "styles": {
            "height": "85%"
          }
        }
      }
    },
    "mobile-landscape": {
      "video": {
        "height": "50vh"
      },
      "sidebar": {
        "height": "50vh"
      },
      "positions": {
        "artistNav": {
          "top": 0.05,
          "styles": {
            "height": "90%"
          }
        }
      }
    },
    "mobile-portrait": {
      "video": {
        "height": "55vh"
      },
      "sidebar": {
        "height": "45vh"
      },
      "positions": {
        "artistNav": {
          "top": 0.05,
          "styles": {
            "height": "90%"
          }
        }
      }
    }
  },
  
  "theme": {
    "colors": {
      "bgPrimary": "#0a0a0a",
      "bgSecondary": "#0F1D38",
      "accent": "#0e9bcc",
      "accentHover": "#48BBD8"
    },
    "typography": {
      "fontFamily": "Helvetica, sans-serif",
      "fontSize": 15,
      "fontWeight": 100,
      "letterSpacing": "0.8px",
      "letterSpacingHover": "3px"
    },
    "spacing": {
      "padding": 20,
      "gap": 10
    },
    "animation": {
      "slideDistance": 10,
      "hoverDistance": 5
    }
  }
}