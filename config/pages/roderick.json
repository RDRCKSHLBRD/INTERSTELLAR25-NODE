{
  "_page": "roderick",
  "_loaded_by": "/public/js/roderick.js",
  "_uses_global": "window.Interstellar (state, position, layout, quadTree)",
  "_comment": "Roderick page config â€” math-first layout + positions, no heavy CSS.",

  "layout": {
    "regions": {
      "header":   { "ratio": 0.08 },
      "main":     { "ratio": 0.60 },
      "controls": { "ratioRange": [0.24, 0.32] }
    },
    "mainSplit": {
      "left":  { "ratio": 0.66 },
      "right": { "ratio": 0.34, "minPx": 360 }
    }
  },

  "positions": {
    "brandLogo":  { "system": "cartesian", "top": 0.50, "left": 0.02, "anchor": "center-left" },
    "pageCrumbs": { "system": "cartesian", "top": 0.50, "left": 0.26, "anchor": "center-left" },
    "topNav":     { "system": "cartesian", "top": 0.50, "left": 0.98, "anchor": "center-right" },

    "albumGrid":  { "system": "cartesian", "top": 0.04, "left": 0.04, "anchor": "top-left",
                    "styles": { "width": "92%" } },

    "albumInfo":  { "system": "cartesian", "top": 0.04, "left": 0.04, "anchor": "top-left",
                    "styles": { "width": "92%", "maxHeight": "40%" } },

    "songList":   { "system": "cartesian", "top": 0.50, "left": 0.04, "anchor": "top-left" },

    "playerControls": { "system": "cartesian", "top": 1.0, "left": 0.5, "anchor": "bottom-center",
      "styles": { "width": "100%", "height": "var(--controls-height, 240px)" } }
  },

  "positionBreakpoints": {
    "mobile": {
      "maxWidth": 767,
      "positions": {
        "albumGrid": { "top": 0.12, "styles": { "width": "94%" } },
        "albumInfo": { "top": 0.55, "styles": { "width": "94%" } }
      }
    },
    "tablet": {
      "minWidth": 768, "maxWidth": 1023,
      "positions": {
        "albumGrid": { "left": 0.08, "styles": { "width": "84%" } },
        "albumInfo": { "left": 0.08, "styles": { "width": "84%" } }
      }
    },
    "desktop": {
      "minWidth": 1024,
      "positions": {
        "albumGrid": { "left": 0.12, "styles": { "width": "76%" } },
        "albumInfo": { "left": 0.12, "styles": { "width": "76%" } }
      }
    }
  },

  "quadTree": {
    "albumGrid": {
      "enabled": true,
      "tile":   { "aspect": 1.0 },
      "gap":    { "px": 16 },
      "columns": {
        "mobile":  { "max": 2 },
        "tablet":  { "max": 3 },
        "desktop": { "max": 4 },
        "ultra":   { "max": 6 }
      },
      "minTilePx": 140,
      "maxTilePx": 280
    }
  },

  "data": {
    "albumsSource": "/api/artists/:artistId/albums",
    "bioSource": "/api/artists/:artistId/bio",
    "preloadAlbumArt": true,
    "lazyLoadBio": false
  },

  "themeRefs": {
    "paintKey": "default",
    "componentPaint": {
      "header": "header",
      "nav": "nav",
      "main": "main",
      "sidebar": "sidebar",
      "player": "player",
      "footer": "footer",
      "badges": "badges"
    }
  }
}
