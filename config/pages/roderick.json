{
  "_page": "roderick",
  "_loaded_by": "/public/js/roderick.js",
  "_uses_global": "window.Interstellar (state, position, layout, quadTree)",
  "_comment": "SEPARATED: Mobile (single column) vs Desktop (two columns)",

  "preloader": { "enabled": false },

  "layout": {
    "regions": {
      "header":   { "ratio": 0.12 },
      "main":     { "ratio": 0.80 },   
      "controls": { "ratio": 0.08 }   
    },
    "mainSplit": {
      "_comment": "Desktop/Tablet ONLY - ignored on mobile",
      "left":  { "ratio": 0.66 },
      "right": { "ratio": 0.34, "minPx": 360 }
    },
    "mobile": {
      "_comment": "Mobile-specific: No split, full-width grid, sidebar hidden",
      "albumsRegion": { "width": "100%", "overflow": "auto" },
      "infoRegion": { "display": "none" }
    }
  },

  "positions": {
    "_comment": "Desktop: horizontal layout",
    
    "brandLogo":  { 
      "system": "cartesian", 
      "top": 0.55, 
      "left": 0.02, 
      "anchor": "middle-left"
    },
    
    "artistName": { 
      "system": "cartesian", 
      "top": 0.50, 
      "left": 0.26, 
      "anchor": "middle-left",
      "_comment": "RENAMED from pageCrumbs"
    },
    
    "topNav": { 
      "system": "cartesian", 
      "top": 0.50, 
      "left": 0.92,
      "anchor": "middle-right"
    },

    "albumInfo":  { 
      "system": "cartesian", 
      "top": 0.04, 
      "left": 0.04, 
      "anchor": "top-left",
      "styles": { "width": "92%", "maxHeight": "40%" }
    },

    "songList":   { 
      "system": "cartesian", 
      "top": 0.50, 
      "left": 0.04, 
      "anchor": "top-left"
    },

    "playerControls": { 
      "system": "cartesian", 
      "top": 0.50,
      "left": 0.5, 
      "anchor": "center",
      "styles": { "width": "100%" }
    }
  },

  "positionBreakpoints": {
    "mobile": {
      "maxWidth": 767,
      "positions": {
        "_comment": "Mobile: Logo > Nav > Artist (CSS handles stacking)",
        
        "brandLogo": {
          "system": "cartesian",
          "top": 0.15,
          "left": 0.50,
          "anchor": "top-center"
        },
        
        "topNav": {
          "system": "cartesian",
          "top": 0.50,
          "left": 0.50,
          "anchor": "middle-center"
        },
        
        "artistName": {
          "system": "cartesian",
          "top": 0.85,
          "left": 0.50,
          "anchor": "bottom-center",
          "_comment": "RENAMED from pageCrumbs"
        }
      }
    },
    
    "tablet": {
      "minWidth": 768, "maxWidth": 1023,
      "positions": {
        "topNav": { 
          "system": "cartesian",
          "left": 0.93 
        },
        "albumInfo": { 
          "system": "cartesian",
          "left": 0.08, 
          "styles": { "width": "84%" } 
        }
      }
    },
    
    "desktop": {
      "minWidth": 1024,
      "positions": {
        "topNav": { 
          "system": "cartesian",
          "left": 0.92 
        },
        "albumInfo": { 
          "system": "cartesian",
          "left": 0.12, 
          "styles": { "width": "76%" } 
        }
      }
    }
  },

  "quadTree": {
    "albumGrid": {
      "enabled": true,
      "tile":   { "aspect": 1.0 },
      "gap":    { "px": 16 },
      "columns": {
        "mobile":  { "max": 2 },
        "tablet":  { "max": 3 },
        "desktop": { "max": 6 },
        "ultra":   { "max": 7 }
      },
      "minTilePx": 140,
      "maxTilePx": 280
    }
  },

  "data": {
    "albumsSource": "/api/artists/:artistId/albums",
    "bioSource": "/api/artists/:artistId/bio",
    "preloadAlbumArt": true,
    "lazyLoadBio": false
  },

  "themeRefs": {
    "paintKey": "default",
    "componentPaint": {
      "header": "header",
      "nav": "nav",
      "main": "main",
      "sidebar": "sidebar",
      "player": "player",
      "footer": "footer",
      "badges": "badges"
    }
  },

  "typography": {
    "_comment": "Font/text size configuration - can be overridden by paint system",
    "header": {
      "logo": { "width": "200px" },
      "artistName": { "fontSize": "18px", "fontWeight": "200", "letterSpacing": "0.5px" },
      "nav": { "fontSize": "16px", "gap": "24px" }
    },
    "mobile": {
      "header": {
        "logo": { "width": "140px" },
        "artistName": { "fontSize": "16px" },
        "nav": { "fontSize": "14px", "gap": "12px" }
      }
    }
  }
}