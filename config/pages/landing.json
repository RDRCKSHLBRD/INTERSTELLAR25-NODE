{
  "_page": "landing",
  "_loaded_by": "/public/js/landing.js",
  "_uses_global": "window.Interstellar (state, position, quadTree)",

  "_comment": "Landing page config - Video (70%) + Artist sidebar (30%)",

  "layout": {
    "mode": "split",
    "videoSection": { "flex": 0.75, "minWidth": "60vw" },
    "sidebarSection": { "flex": 0.2, "minWidth": "20vw", "maxWidth": "280px" }
  },

  "positions": {
    "artistNav": {
      "x": 0.00,
      "y": 0.15,
      "anchor": "t-l",
      "clamp": true,
      "styles": {
        "height": "70%",
        "width": "100%"
      }
    }
  },

  "positionBreakpoints": {
    "mobile-portrait": {
      "maxWidth": 480,
      "orientation": "portrait",
      "positions": {
        "artistNav": {
          "y": 0.60,
          "styles": { "height": "35%" }
        }
      }
    },
    "mobile-landscape": {
      "minWidth": 481,
      "maxWidth": 844,
      "orientation": "landscape",
      "positions": {
        "artistNav": {
          "y": 0.50,
          "styles": { "height": "40%" }
        }
      }
    },
    "tablet": {
      "minWidth": 768,
      "maxWidth": 1023,
      "positions": {
        "artistNav": {
          "y": 0.55,
          "styles": { "height": "40%" }
        }
      }
    },
    "desktop": {
      "minWidth": 1024,
      "positions": {
        "artistNav": {
          "y": 0.50,
          "styles": { "height": "45%" }
        }
      }
    }
  },

  "quadTree": {
    "artistNav": { "enabled": false }
  },

  "theme": {
    "sidebarBackground": "#0F1D38",
    "videoObjectFit": "cover"
  },

  "data": {
    "artistsSource": "/config/data/artists.json",
    "preloadVideo": true
  }
}
