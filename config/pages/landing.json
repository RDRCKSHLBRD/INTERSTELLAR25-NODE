{
  "_page": "landing",
  "_loaded_by": "/public/js/landing.js",
  "_uses_global": "window.Interstellar (state, position, quadTree)",
  "_comment": "Landing page config - Video (≈75%) + Artist sidebar (≈25%)",

  "layout": {
    "mode": "split",
    "videoSection": { "flex": 0.75, "minWidth": "60vw" },
    "sidebarSection": { "flex": 0.25, "minWidth": "20vw", "maxWidth": "320px" }
  },

  "positions": {
    "artistNav": {
      "relativeTo": ".landing-sidebar",
      "anchor": "m-l",
      "x": 0.05,
      "y": 0.35,
      "clamp": true,
      "styles": {
        "width": "90%",
        "height": "50%",
        "padding": "12px 16px 16px"
      }
    }
  },

  "positionBreakpoints": {
    "mobile-portrait": {
      "maxWidth": 480,
      "orientation": "portrait",
      "positions": {
        "artistNav": {
          "y": 0.15,
          "styles": { "height": "50%" }
        }
      }
    },
    "mobile-landscape": {
      "minWidth": 481,
      "maxWidth": 844,
      "orientation": "landscape",
      "positions": {
        "artistNav": {
          "y": 0.3,
          "styles": { "height": "44%" }
        }
      }
    },
    "tablet": {
      "minWidth": 768,
      "maxWidth": 1023,
      "positions": {
        "artistNav": {
          "y": 0.1,
          "styles": { "height": "50%" }
        }
      }
    },
    "desktop": {
      "minWidth": 1024,
      "positions": {
        "artistNav": {
          "y": 0.45,
          "styles": { "height": "50%" }
        }
      }
    }
  },

  "quadTree": { "artistNav": { "enabled": false } },

  "theme": {
    "sidebarBackground": "#0F1D38",
    "videoObjectFit": "cover"
  },

  "data": {
    "artistsSource": "/config/data/artists.json",
    "preloadVideo": true
  }
}
