<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/additional-styles.css">
    <style>
        .album-download-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 2rem;
        }

        .album-header {
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 2rem;
            margin-bottom: 3rem;
            background: white;
            padding: 2rem;
            border-radius: 2px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .album-cover {
            width: 100%;
            border-radius: 1px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .album-info h1 {
            color: #1e293b;
            margin: 0 0 1rem 0;
            font-size: 2.5rem;
        }

        .album-info .artist {
            color: #0891b2;
            font-size: 1.3rem;
            font-weight: 500;
            margin-bottom: 1rem;
        }

        .album-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: .5rem;
            margin: 1rem 0;
        }

        .detail-item {
            background: #f8fafc;
            padding: 1rem;
            border-radius: 6px;
        }

        .detail-label {
            font-size: 0.9rem;
            color: #64748b;
            margin-bottom: 0.25rem;
        }

        .detail-value {
            font-weight: 500;
            color: #1e293b;
        }

        .download-options {
            background: white;
            border-radius: 2px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .download-options h2 {
            color: #1e293b;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }

        .format-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
        }

        .format-option {
            border: 2px solid #e2e8f0;
            border-radius: 4px;
            padding: 1.5rem;
            text-align: center;
            transition: all 0.2s ease;
        }

        .format-option:hover {
            border-color: #0891b2;
            
        }

        .format-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .format-name {
            font-size: 1.2rem;
            font-weight: 400;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .format-description {
            color: #64748b;
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .format-size {
            background: #f1f5f9;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
            color: #475569;
            margin-bottom: 1rem;
        }

        .download-btn {
            background: #0891b2;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.2s ease;
            text-decoration: none;
            display: inline-block;
        }

        .download-btn:hover {
            background: #0e7490;
        }

        .download-btn:disabled {
            background: #94a3b8;
            cursor: not-allowed;
        }

        .tracklist {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 1rem;
            margin-bottom: 2rem;
        }

        .tracklist h2 {
            color: #1e293b;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }

        .track-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .track-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid #f1f5f9;
        }

        .track-item:last-child {
            border-bottom: none;
        }

        .track-number {
            width: 2rem;
            color: #64748b;
            font-weight: 500;
        }

        .track-name {
            flex: 1;
            color: #1e293b;
            margin-left: 1rem;
        }

        .track-duration {
            color: #64748b;
            font-size: 0.9rem;
        }

        .download-info {
            background: #f8fafc;
            border-radius: 8px;
            padding: 1.5rem;
            margin-top: 2rem;
        }

        .download-info h3 {
            color: #1e293b;
            margin-bottom: 1rem;
        }

        .download-info ul {
            color: #64748b;
            margin: 0;
            padding-left: 1.5rem;
        }

        .download-info li {
            margin-bottom: 0.5rem;
        }

        @media (max-width: 768px) {
            .album-download-container {
                padding: 1rem;
            }

            .album-header {
                grid-template-columns: 1fr;
                text-align: center;
            }

            .album-info h1 {
                font-size: 2rem;
            }

            .format-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="album-download-container">
        <!-- Header with purchase info -->
        <div class="album-header">
            <% if (items[0] && items[0].cover_url) { %>
                <img src="<%= items[0].cover_url %>" alt="Album Cover" class="album-cover">
            <% } else { %>
                <div style="width: 300px; height: 300px; background: #f1f5f9; border-radius: 2px; display: flex; align-items: center; justify-content: center; color: #64748b;">
                    >> Music Download
                </div>
            <% } %>
            
            <div class="album-info">
                <h1>Your Music Download</h1>
                <div class="artist">Interstellar Packages</div>
                
                <div class="album-details">
                    <div class="detail-item">
                        <div class="detail-label">Email</div>
                        <div class="detail-value"><%= email %></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Purchase Date</div>
                        <div class="detail-value"><%= new Date(purchaseDate).toLocaleDateString() %></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Total Amount</div>
                        <div class="detail-value">$<%= parseFloat(totalAmount).toFixed(2) %></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Items</div>
                        <div class="detail-value"><%= items.length %> item<%= items.length !== 1 ? 's' : '' %></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Download Options -->
        <div class="download-options">
            <h2>Your Music Files</h2>
            
            <% items.forEach((item, index) => { %>
                <div style="margin-bottom: 2rem; padding: 1.5rem; border: 1px solid #e2e8f0; border-radius: 2px;" data-album-id="<%= item.id %>">
                    <h3 style="color: #1e293b; margin-bottom: 1rem;">
                        <%= item.name %> 
                        <% if (item.type === 'song') { %>
                            <span style="color: #64748b; font-size: 0.9rem; font-weight: normal;">from <%= item.album %></span>
                        <% } %>
                    </h3>
                    
                    <% if (item.type === 'album' && item.songs && item.songs.length > 0) { %>
                        <!-- Album with tracklist -->
                        <div class="format-grid">
                            <div class="format-option">
                                
                                <div class="format-name">MP3 Album</div>
                                <div class="format-description">High quality MP3 files for all tracks</div>
                                <div class="format-size"><%= item.songs.length %> tracks</div>
                                <a href="#" class="download-btn" onclick="downloadAlbumFiles('<%= item.id %>', 'mp3')">
                                    Download MP3s
                                </a>
                            </div>
                            
                            <div class="format-option">
                                
                                <div class="format-name">WAV Album</div>
                                <div class="format-description">Lossless audio files (when available)</div>
                                <div class="format-size"><%= item.songs.length %> tracks</div>
                                <a href="#" class="download-btn" onclick="downloadAlbumFiles('<%= item.id %>', 'wav')">
                                    Download WAVs
                                </a>
                            </div>
                        </div>

                        <!-- Tracklist -->
                        <div class="tracklist" style="margin-top: 1.5rem;">
                            <h4 style="color: #1e293b; margin-bottom: 1rem;">Album Tracks</h4>
                            <ul class="track-list">
                                <% item.songs.forEach((song, trackIndex) => { %>
                                    <li class="track-item" data-song-url="<%= song.audio_url %>" data-song-name="<%= song.name %>" data-song-id="<%= song.id %>">
                                        <span class="track-number"><%= trackIndex + 1 %>.</span>
                                        <span class="track-name"><%= song.name %></span>
                                        <span class="track-duration">
                                            <% if (song.duration) { %>
                                                <%= song.duration %>
                                            <% } %>
                                        </span>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    <% } else if (item.type === 'song') { %>
                        <!-- Individual song -->
                        <div class="format-grid">
                            <div class="format-option">
                               
                                <div class="format-name">MP3 Download</div>
                                <div class="format-description">High quality MP3 file</div>
                                <a href="/download-file/<%= token %>/<%= item.id %>" class="download-btn" download="<%= item.name %>.mp3">
                                    Download MP3
                                </a>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% }) %>
        </div>

        <!-- Download Information -->
        <div class="download-info">
            <h3>>> Download Information</h3>
            <ul>
                <li>Your download link expires on <%= new Date(expiresAt).toLocaleDateString() %></li>
                <li>Files are high-quality MP3 format (320kbps when available)</li>
                <li>WAV files are provided when available for audiophile listening</li>
                <li>Save your files to your device before the expiration date</li>
                <li>Having trouble? Reply to your purchase email for support</li>
            </ul>
            
            <div style="margin-top: 1.5rem; padding: 1rem; background: #eff6ff; border-radius: 2px; border-left: 2px solid #0891b2;">
                <strong style="color: #0891b2;">Thank you for your purchase!</strong><br>
                <span style="color: #64748b;">Enjoy your ambient electronic music journey with Roderick Shoolbraid.</span>
            </div>
        </div>
    </div>

    <script>
        function downloadFile(url, filename) {
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            a.style.display = 'none';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
        }

        function downloadAlbumFiles(albumId, format) {
            // Get the album data from the page
            const albumElement = document.querySelector(`[data-album-id="${albumId}"]`);
            if (!albumElement) {
                alert('Album not found.');
                return;
            }

            const songElements = albumElement.querySelectorAll('[data-song-url]');
            if (songElements.length === 0) {
                alert('No songs found for this album.');
                return;
            }

            // Use server download route for each song
            songElements.forEach((songEl, index) => {
                setTimeout(() => {
                    const songId = songEl.getAttribute('data-song-id');
                    const songName = songEl.getAttribute('data-song-name');
                    
                    // Create download link through our server
                    const downloadUrl = `/download-file/<%= token %>/${songId}`;
                    downloadFile(downloadUrl, `${songName}.${format}`);
                }, index * 500);
            });
            
            alert(`Started downloading ${songElements.length} ${format.toUpperCase()} files.`);
        }
    </script>
</body>
</html>